{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended"],
  schedule: ["before 7am on the 1st day of the month"],
  packageRules: [
    {
      automerge: true,
      groupName: "uv dev minor",
      matchDepTypes: ["dev"],
      matchManagers: ["uv"],
      matchUpdateTypes: [
        "bump",
        "digest",
        "lockFileMaintenance",
        "minor",
        "patch",
        "pin",
        "rollback",
      ],
    },
    {
      automerge: true,
      groupName: "uv dev major",
      matchDepTypes: ["dev"],
      matchManagers: ["uv"],
      matchUpdateTypes: ["major"],
    },
    {
      groupName: "Python uv Non-Major Dependencies",
      matchDepTypes: ["dependencies"],
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
    },
    {
      groupName: "Python uv Major Dependencies",
      matchDepTypes: ["dependencies"],
      matchUpdateTypes: ["major"],
      automerge: false,
    },
  ],
}
